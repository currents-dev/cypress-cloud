{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "DEBUG",
        "CURRENTS_PROJECT_ID",
        "CURRENTS_API_BASE_URL",
        "CURRENTS_RECORD_KEY",
        "TF_BUILD",
        "TF_BUILD_BUILDNUMBER",
        "AZURE_HTTP_USER_AGENT",
        "bamboo_buildNumber",
        "CI_NAME",
        "CODESHIP",
        "GITLAB_CI",
        "CI_SERVER_NAME",
        "GCP_PROJECT",
        "GCLOUD_PROJECT",
        "GOOGLE_CLOUD_PROJECT",
        "JENKINS_URL",
        "JENKINS_HOME",
        "JENKINS_VERSION",
        "HUDSON_URL",
        "HUDSON_HOME",
        "WERCKER",
        "WERCKER_MAIN_PIPELINE_STARTED"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
